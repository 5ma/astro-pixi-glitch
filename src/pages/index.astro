---
import Layout from '../layouts/Layout.astro';
---

<script src="../scripts/index.js"></script>

<Layout title="Pixi Glitch Animation">
	<div class="container">
		<div class="logo" data-pixi-logo>
			<img src="logo-unite.png" alt="" class="logoImg">
			<canvas class="canvas" id="js-pixi-stage"></canvas>
		</div>
	</div>
</Layout>

<style>
	.container {
		display: grid;
		place-items: center;
		width: 100%;
		height: 100dvh;
		background-color: #000;
	}

	.logo {
		position: relative;
		width: 60%;
		animation: fadeIn 1s ease-in;
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

	.logoImg {
		width: 100%;
		opacity: 0;
	}

	.canvas {
		position: absolute;
		top: 50%;
		left: 50%;
		width: calc(100% + 100px) !important;
		height: calc(100% + 100px) !important;
		transform: translate(-50%, -50%);
	}
</style>
